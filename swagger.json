{
  "openapi": "3.0.1",
  "info": {
    "title": "Payment Gateway",
    "description": "A payment gateway that allows merchants to offer their shoppers a secure way to pay for their products",
    "version": "v1"
  },
  "paths": {
    "/api/payments": {
      "post": {
        "tags": [
          "Payments"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessPaymentCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessPaymentCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProcessPaymentCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/api/payments/{id}": {
      "get": {
        "tags": [
          "Payments"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreditCardDto": {
        "required": [
          "cardNumber",
          "cvv",
          "expiryMonth",
          "expiryTwoDigitYear"
        ],
        "type": "object",
        "properties": {
          "cardNumber": {
            "type": "string"
          },
          "expiryMonth": {
            "type": "integer",
            "format": "int32"
          },
          "expiryTwoDigitYear": {
            "type": "integer",
            "format": "int32"
          },
          "cvv": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ProcessPaymentCommand": {
        "required": [
          "amount",
          "creditCard",
          "currency"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "type": "string"
          },
          "creditCard": {
            "$ref": "#/components/schemas/CreditCardDto"
          }
        },
        "additionalProperties": false
      }
    }
  }
}